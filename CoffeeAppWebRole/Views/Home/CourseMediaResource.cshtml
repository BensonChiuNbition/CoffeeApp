@{
    ViewBag.Title = "Course Media Resource";
}

@section featured {

    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>


            <div class="cf" id ="courseMediaResource">
                <h3>Videos</h3>
                @foreach (var resource in ViewBag.MediaResourcesVideo)
                {    
                <div class="row">
                    <div class="large-12 columns">
                        <div class="panel">
                            <p>
                                <iframe width="420" height="315" src="@resource.Path" frameborder="0" allowfullscreen></iframe>
                            </p>
                            <p>@resource.Description</p>
                        </div>
                    </div>
                </div>
                 }
                <h3>Photos</h3>
                @foreach (var resource in ViewBag.MediaResourcesPhoto)
                {    
                <div class="row">
                    <div class="large-12 columns">
                        <div class="panel">
                            <p><img src="@resource.Path" /></p>
                            <p>@resource.Description</p>
                        </div>
                    </div>
                </div>
                 }
            </div>

        </div>
    </section>
}
